# McManager Environment Configuration
# Copy this file to .env and customize for your environment

# Optional: Set a custom port (default: 3000)
PORT=3000

# Node Environment (development/production)
NODE_ENV=production

# Optional: Set custom servers directory
# SERVERS_DIR=./servers

# Optional: Enable debug logging
# DEBUG=true

# Git repository URL for auto-updates (optional)
# GIT_REPO_URL=https://github.com/yourusername/mcmanager.git

# Update check interval in minutes (default: 1)
# UPDATE_INTERVAL=1

# Discord Webhooks (Optional - configure per-server in UI)
# DISCORD_WEBHOOK_URL=60000
